			@Override
            public Class<?> getColumnClass(int column) {
                return getValueAt(0, column).getClass();
            }

            @Override
            public boolean isCellEditable(int row, int column) {
            	/*
            	 * To Tracking den einai editable column 7
            	 */
            	if (column == 7)
            		return false;
            	else
            		return true;
            }
